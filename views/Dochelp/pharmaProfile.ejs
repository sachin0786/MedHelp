<%- include('../partials/header1') %>

  <link rel="stylesheet" href="/stylesheets/hospitalProfile.css" />
  <h1 id="profile">Pharma Profile</h1>

  <div class="hospital">
    <div class="gridImg">
      <img src="/images/pharmacy.jpg" alt="" />
    </div>
    <div class="grid-info">
      <h1><%=pharma.name%></h1>
      <p>
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Rem
        temporibus, illo saepe itaque totam in sapiente quo repudiandae
        numquam eos adipisci hic veniam exercitationem omnis vitae voluptas,
        quaerat modi impedit quia sunt! Natus, eum.
      </p>
      <h3>
        <img src="https://img.icons8.com/ios-glyphs/30/000000/marker--v1.png" />
        <%=pharma.location.address%>
      </h3>
      <h3>
        <img src="https://img.icons8.com/ios-glyphs/30/000000/marker--v1.png" /><%=pharma.location.city%>,<%=pharma.location.state%>
      </h3>
      <h3>
        <img src="https://img.icons8.com/ios-glyphs/30/000000/marker--v1.png" /><%=pharma.location.pincode%>
      </h3>
      <h3>
        <img src="https://img.icons8.com/ios-glyphs/30/000000/phone--v1.png" /><%=pharma.contact.phone%>
      </h3>
    </div>
  </div>

  <!-- reviews -->
  <h2 id="reviewheading">Write a Review</h2>
  <div class="review">
    <form action="/viewpharma/<%=pharma._id%>" method="post">
      <div class="tag">
        <label for="name">Enter Name:</label>
        <input type="text" id="name" />
      </div>

      <div class="tag">
        <label for="text">Write Review:</label>
        <input type="text" id="text" />
      </div>

      <div class="tag">
        <label for="rating">Give Rating:</label>
        <input type="text" id="rating" />
      </div>
      <button class="btn btn-dark d-block">Submit</button>
    </form>
  </div>

   <!-- print comment  -->
   <div class=" container1 ">
    <h1>Reviews</h1>
    <%for(let i=0;i<pharma.review.length;i++){%>
      <div class="comment">
        <div class="author">
          <p>
            <%for(let j=0;j<pharma.review[i].rating;j++){%>
              <span id="stars">‚≠ê</span>
            <%}%>
          </p>
          <h3>
            ~
            <%=pharma.review[i].name%>
          </h3>
        </div>
        <p>
          <!-- <%=pharma.review[i].comments%> -->
          <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Autem consectetur labore quisquam temporibus esse iure et perferendis, quia explicabo magni. Similique quae ratione tempora nam, aut reiciendis facilis. Nesciunt rem sunt iusto hic ipsa?</p>
        </p>

      </div>
      <%}%>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
    integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
    crossorigin="anonymous"></script>

</body>

</html>