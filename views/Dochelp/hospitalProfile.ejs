<%- include('../partials/header1') %>

  <link rel="stylesheet" href="/stylesheets/hospitalProfile.css" />
  
     
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&family=Source+Serif+4:ital,wght@1,300&display=swap" rel="stylesheet">

  <h1 id="profile">Hospital Profile</h1>

  <div class="hospital">
    <div class="gridImg">
      <img src="/images/hospital.jpg" alt="" />
    </div>
    <div class="grid-info">
      <h1>
        <%=hospital.name%>
      </h1>
      <p>
        <%=hospital.bio%>
      </p>
      <h3>
        <img src="https://img.icons8.com/ios-glyphs/30/000000/marker--v1.png" />
        <%=hospital.location.address%>
      </h3>
      <h3>
        <img src="https://img.icons8.com/ios-glyphs/30/000000/marker--v1.png" />
        <%=hospital.location.city%>,<%=hospital.location.state%>
      </h3>
      <h3>
        <img src="https://img.icons8.com/ios-glyphs/30/000000/marker--v1.png" />
        <%=hospital.location.pincode%>
      </h3>
      <h3>
        <img src="https://img.icons8.com/ios-glyphs/30/000000/phone--v1.png" />
        <%=hospital.contact.email%>,<%=hospital.contact.phone%>
      </h3>
    </div>
  </div>

  <!-- reviews -->
  <h2 id="reviewheading">Write a Review</h2>
  <div class="review">
    <form action="/viewhospital/<%=hospital._id%>" method="post">
      <div class="tag">
        <label for="name">Enter Name:</label>
        <input type="text" id="name" name="name" />
      </div>

      <div class="tag">
        <label for="text">Write Review:</label>
        <input type="text" id="text" name="comments" />
      </div>

      <div class="tag">
        <label for="rating">Give Rating:</label>
        <input type="text" id="rating" name="rating" />
      </div>
      <button class="btn btn-dark d-block">Submit</button>
    </form>
  </div>

  <!-- print comment  -->
  <div class=" container1 " id="review_flag">
    <h1>Reviews</h1>
    <%for(let i=0;i<hospital.review.length;i++){%>
      <div class="comment">
        <div class="author">
          <p>
            <%for(let j=0;j<hospital.review[i].rating;j++){%>
              <span id="stars">‚≠ê</span>
            <%}%>
          </p>
          <h3>
            ~
            <%=hospital.review[i].name%>
          </h3>
        </div>
        <p>
          <%=hospital.review[i].comments%> 
          <!-- <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Autem consectetur labore quisquam temporibus esse iure et perferendis, quia explicabo magni. Similique quae ratione tempora nam, aut reiciendis facilis. Nesciunt rem sunt iusto hic ipsa?</p> -->
        </p>

      </div>
      <%}%>
  </div>

  


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
    integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
    crossorigin="anonymous"></script>

  </body>

  </html>